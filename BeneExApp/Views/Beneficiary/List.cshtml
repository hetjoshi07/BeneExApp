@model IEnumerable<BeneExApp.DTOs.BeneficiaryRequestDto>

@{
    ViewData["Title"] = "Beneficiaries List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <div>
        <a asp-action="Add" asp-controller="Beneficiary" class="btn btn-primary me-2">
            ➕ Add Beneficiary
        </a>
    </div>
</div>
<hr />
@if (Model.Any())
{
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile No</th>
                <th>Phone No</th>
                <th>Bank</th>
                <th>Branch</th>
                <th>Account No</th>
                <th>IFSC</th>
                <th>PAN</th>
                <th>GST</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.MobileNo</td>
                    <td>@item.PhoneNo</td>
                    <td>@item.BankName</td>
                    <td>@item.BranchName</td>
                    <td>@item.AccountNo</td>
                    <td>@item.IFSCCode</td>
                    <td>@item.PANNo</td>
                    <td>@item.GSTNo</td>
                    <td class="m-1">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="col-md-12">
        <div class="alert alert-info" role="alert">
            No beneficiaries found. Please add a new beneficiary.
        </div>
    </div>
}